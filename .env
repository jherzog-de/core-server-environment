# Domain name for the environment host
BASE_DOMAIN=example.com

# Traefik dashboard web domain
TRAEFIK_DOMAIN=traefik.${BASE_DOMAIN}

# Portainer administration application domain
PORTAINER_DOMAIN=portainer.${BASE_DOMAIN}

# Grafana dashboard domain
GRAFANA_DOMAIN=grafana.${BASE_DOMAIN}

# Prometheus endpoint domain
PROMETHEUS_DOMAIN=prometheus.${BASE_DOMAIN}

# E-Mail for Let's Encrypt
LETSENCRYPT_EMAIL=admin@example.com

# Traefik Docker Image Version
TRAEFIK_VERSION=latest

# Portainer Docker Image Version
PORTAINER_VERSION=latest

# Grafana Docker Image Version
GRAFANA_VERSION=latest

# Prometheus Docker Image Version
PROMETHEUS_VERSION=latest

# Node-Exporter Docker Image Version
NODE_EXPORTER_VERSION=latest

# Grafana Default Login
GRAFANA_ADMIN_USER=admin

# Grafana Default Login Password
GRAFANA_ADMIN_PASSWORD=changeme

# Timezone setting
TZ=Europe/Berlin

VOLUME_PATH_PORTAINER=./volumes/portainer

VOLUME_PATH_GRAFANA=./volumes/grafana

VOLUME_PATH_PROMETHEUS=./volumes/prometheus

VOLUME_PATH_TRAEFIK=./volumes/traefik